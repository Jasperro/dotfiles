set $mod Mod4

exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
exec --no-startup-id dunst -config ~/.config/dunst/config &
exec --no-startup-id compton &
exec --no-startup-id nm-applet &
exec --no-startup-id redshift-gtk &
exec --no-startup-id nitrogen --restore &

bindsym $mod+Shift+f exec pcmanfm
bindsym $mod+Shift+s exec pavucontrol
bindsym $mod+Shift+w exec chromium
bindsym $mod+Return exec sakura

bindsym $mod+q kill
bindsym $mod+Shift+q exec i3lock-blur

bindsym $mod+d exec rofi -show run

gaps inner 10
gaps outer 0
smart_gaps on

new_window pixel 0
new_float pixel 0

font pango:Source Sans Pro 11

set $workspace1 " 1"
