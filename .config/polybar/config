[module/filesystem]
type = internal/fs
interval = 25
spacing = 2
mount-0 = /
label-mounted = " %mountpoint% %percentage_used%%"
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}
format-mounted-underline = ${colors.green}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true
pin-workspaces = true
padding = 2
label-value = %name%

label-focused = ${self.label-value}
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.red}
label-focused-padding = ${self.padding}

label-occupied = ${self.label-value}
label-occupied-padding = ${self.padding}

label-urgent = ${self.label-value}
label-urgent-background = ${colors.alert}
label-urgent-padding = ${self.padding}

label-empty = ${self.label-value}
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = ${self.padding}

label-mode-foreground = #000
label-mode-background = ${colors.primary}
label-mode-padding = ${self.padding}

label-unfocused = ${self.label-value}
label-unfocused-padding = ${self.padding}

label-visible = ${self.label-value}
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.padding}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.magenta}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.blue}
label = %percentage_used%%

[module/wifi]
type = custom/script
interval = 30
exec = "nmcli d show wlp1s0 | grep 'GENERAL.CONNECTION' | awk '{ print $2 }'"
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.magenta}
click-left = networkmanager_dmenu

[module/eth]
type = internal/network
interface = enp3s0
interval = 3.0

label-connected =  %ifname%
label-disconnected =  %ifname% disconnected


format-connected = <label-connected>
format-connected-underline = ${colors.green}
format-disconnected = <label-disconnected>
format-disconnected-underline = ${colors.red}

[module/date]
type = internal/date
interval = 5
date = "%a %d %b"
date-alt = "%d-%m-%Y, %U"
time = %H:%M
time-alt = %H:%M %a
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.blue}
label = %date% %time%

[module/volume]
type = internal/volume

label-volume = " %percentage%%"
